{
  "name": "mindbridge-server",
  "version": "1.0.0",
  "description": "MindBridge - AI-Powered Elderly Companion System Backend",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "clean-port": "node scripts/cleanup-port.js",
    "dev": "npm run clean-port && nodemon src/index.js",
    "dev:clean": "taskkill /F /IM node.exe /FI \"WINDOWTITLE eq *node*\" 2>nul & timeout /t 1 & npm run dev",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "seed": "node scripts/seedDb.js"
  },
  "keywords": [
    "elderly-care",
    "ai-chatbot",
    "cognitive-health",
    "mern"
  ],
  "author": "MindBridge Team",
  "license": "MIT",
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.0.0",
    "express-validator": "^7.0.0",
    "groq-sdk": "^0.3.3",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-telegram-bot-api": "^0.64.0",
    "nodemailer": "^6.9.6",
    "openai": "^4.3.1",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.1",
    "socket.io-client": "^4.7.1",
    "twilio": "^5.12.2",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "eslint": "^8.49.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
